# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*]
indent_style = space
indent_size = 2
tab_width = 2

# Matches the exact files either .md or .markdown
[*.txt]
indent_style = tab
indent_size = 2
tab_width = 2

# Matches the exact files either package.json or .travis.yml
[{ package.json, .travis.yml }]
indent_style = space
indent_size = 2

# Matches the exact files either .md or .markdown
[*.{ md, markdown }]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Matches the exact files either .html
[*.html]
indent_style = tab
indent_size = 2
tab_width = 2
